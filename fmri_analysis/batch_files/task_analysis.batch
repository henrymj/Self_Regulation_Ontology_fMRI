#!/bin/bash
#SBATCH --job-name={sid}-task_analysis
#SBATCH --output=.out/{sid}-task_analysis.out
#SBATCH --error=.err/{sid}-task_analysis.err
#SBATCH --time=36:00:00
#SBATCH --qos=russpold
#SBATCH --mail-type=ALL
#SBATCH --mail-user=ieisenbe@stanford.edu
#SBATCH --cpus-per-task=3
#SBATCH --ntasks-per-node=1
#SBATCH -p russpold
module load singularity
export PYTHONPATH=""
# set up paths
singularity_loc=/oak/stanford/groups/russpold/users/ieisenbe/Self_Regulation_Ontology/fmri_analysis/nipype_image-2017-10-03-da77dd426e45.img
fmri_prep_loc=/oak/stanford/groups/russpold/users/ieisenbe/Self_Regulation_Ontology/fmri_analysis/fmriprep/fmriprep/
output_dir=/oak/stanford/groups/russpold/users/ieisenbe/Self_Regulation_Ontology/fmri_analysis/output
# run singularity, scratch is automatically mounted
singularity run -B $fmri_prep_loc:/Data $singularity_loc $output_dir --participant_label {sid} --tasks {tasks}

